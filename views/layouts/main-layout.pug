doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{pageTitle}
    style.
      body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      }
      main {
      padding: 1rem;
      }
      .main-header {
      width: 100%;
      height: 3.5rem;
      padding: 0 1.5rewm;
      background-color: rgb(219, 196, 65);
      }
      .main-header__item-list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      }
      .main-header_item {
      margin: 0 1rem;
      padding: 0;
      }
      .main-header-nav {
      height: 100%;
      display: flex;
      align-items: center;
      }
      .main-header_item a {
      text-decoration: none;
      color: #000;
      }
      a:hover {
      color: #6200ff !important;
      }
      .main-header__item a.active {
      color: #6200ff !important;
      }
      .form-control label,
      .form-control input {
      display: block;
      width: 100%;
      }
      .product-form {
      width: 27rem;
      max-width: 90%;
      margin: auto;
      }
      .form-control input {
      border: 1px solid rgb(219, 196, 65);
      border-radius: 2px;
      font: inherit;
      }
      button {
      font: inherit;
      border: 1px solid #ffb641;
      background: #e6cf6c;
      border-radius: 3px;
      padding: 4px 8px;
      cursor: pointer;
      }
      button:hover {
      background-color: #6200ff;
      border: 2px solid #6200ff;
      }
  body
    header.main-header
      nav.main-header-nav
        ul.main-header__item-list
          li.main-header_item
            a.active(href='/') Shop
          li.main-header_item
            a(href='/admin/add-product',class=(path==='/admin/add-product'? 'active':'')) Add Product
    block content